<div class="row">

  <div class="col-xs-6 col-xs-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">Login</div>
      <div class="panel-body">

        <form action="/login" method="post">
          <div class="form-group">
            <label>Email: </label><input type="text" name="email" placeholder="email" class="form-control" />
          </div>
          <div class="form-group">
            <label>Password: </label><input type="password" name="password" placeholder="password" class="form-control"/>
          </div>

          <button type="submit" class="btn bt-success">Login</button>
        </form>

      </div>
    </div>
  </div>
</div>
